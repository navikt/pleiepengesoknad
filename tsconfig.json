{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es2015",
        "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "baseUrl": "./src",
        "strict": true,
        "noEmit": false,
        "paths": {
            "@navikt/sif-common-pleiepenger": ["sif-common-pleiepenger/src"],
            "@navikt/sif-common-pleiepenger/*": ["sif-common-pleiepenger/src/*"]
        },
        "types": ["jest", "node", "@types/testing-library__jest-dom"]
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist", "e2e/cypress", "./e2e/cypress.config.js"]
}
